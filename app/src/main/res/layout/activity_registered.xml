<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="昵称："
            android:textSize="20dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_nickname_reg"
            android:layout_width="match_parent"
            android:hint="请输入昵称"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#303F9F"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="账号："
            android:textSize="20dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_name_reg"
            android:layout_width="match_parent"
            android:hint="请输入账号"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#303F9F"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="密码："
            android:textSize="20dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_pwd_reg"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:hint="请输入密码"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#303F9F"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="确认密码："
            android:textSize="20dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_pwd_confirm_reg"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:hint="请输入密码"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#303F9F"/>
    <Button
        android:id="@+id/registered_ac"
        android:layout_width="match_parent"
        android:text="注册"
        android:textSize="20dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#303F9F"/>
</LinearLayout>
